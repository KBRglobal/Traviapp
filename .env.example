# ===========================================
# Traviapp Environment Variables
# ===========================================
# Copy this file to .env and fill in values

# -------------------------------------------
# DATABASE
# -------------------------------------------
DATABASE_URL=postgresql://user:password@localhost:5432/traviapp

# -------------------------------------------
# AUTHENTICATION
# -------------------------------------------
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=            # bcrypt hash of admin password
SESSION_SECRET=                 # Random 32+ character string

# Replit Auth (optional)
ISSUER_URL=
REPLIT_IDENTITY=

# -------------------------------------------
# AI SERVICES
# -------------------------------------------
# OpenAI (required for AI features)
OPENAI_API_KEY=sk-...
AI_INTEGRATIONS_OPENAI_API_KEY=sk-...
AI_INTEGRATIONS_OPENAI_BASE_URL=    # Optional custom endpoint

# Anthropic Claude (optional, for premium content)
ANTHROPIC_API_KEY=sk-ant-...

# Replicate (optional, for image generation)
REPLICATE_API_KEY=

# Freepik (optional, for stock images)
FREEPIK_API_KEY=

# -------------------------------------------
# TRANSLATION
# -------------------------------------------
DEEPL_API_KEY=                  # Required for translation

# -------------------------------------------
# EMAIL
# -------------------------------------------
RESEND_API_KEY=re_...           # Required for newsletters
LEAD_NOTIFICATION_EMAIL=admin@example.com

# -------------------------------------------
# STORAGE
# -------------------------------------------
DEFAULT_OBJECT_STORAGE_BUCKET_ID=
OBJECT_STORAGE_URL=

# -------------------------------------------
# CACHING (Upstash Redis)
# -------------------------------------------
UPSTASH_REDIS_REST_URL=https://...
UPSTASH_REDIS_REST_TOKEN=

# -------------------------------------------
# SECURITY (CAPTCHA - choose one)
# -------------------------------------------
# Google reCAPTCHA
RECAPTCHA_SECRET_KEY=
RECAPTCHA_SITE_KEY=

# hCaptcha
HCAPTCHA_SECRET_KEY=

# Cloudflare Turnstile
TURNSTILE_SECRET_KEY=

# -------------------------------------------
# SERVER
# -------------------------------------------
PORT=5000
NODE_ENV=development

# -------------------------------------------
# SAFE MODE (optional)
# -------------------------------------------
SAFE_MODE_READ_ONLY=false
SAFE_MODE_DISABLE_AI=false
